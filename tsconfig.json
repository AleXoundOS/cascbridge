{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": ["src/renderer"],
      "src/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true
  }
}
